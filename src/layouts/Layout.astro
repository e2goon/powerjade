---
import Document from "./Document.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Document {title}>
  <slot name="before" />
  <div class="mx-auto max-w-xl">
    <header class="px-4 py-10 [&~main]:pt-0">
      <a href="/" class="text-lg font-bold italic">powerjade</a>
    </header>
    <main class="p-4">
      <slot />
    </main>
  </div>
</Document>
